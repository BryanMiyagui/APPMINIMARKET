<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <RelativeLayout
                android:layout_width="330dp"
                android:layout_height="180dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                >



                <TextView
                    android:id="@+id/codigoCategoriaLis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100001"
                    android:textSize="1sp"
                    android:textStyle="bold"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/descripcionCategoriaLis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="25dp"
                    android:text="CARNES"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imagenCategoriaLis"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/estilobotonsinborde"

                    android:onClick="botoncategorialis"
                    app:srcCompat="@drawable/carne" />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>